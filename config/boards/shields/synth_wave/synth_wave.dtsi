#include <dt-bindings/zmk/matrix_transform.h>
&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
    };
};
#include <dt-bindings/led/led.h>

&pinctrl {
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 2)>;
        };
    };

    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 2)>;
            low-power-enable;
        };
    };
};

&spi3 {
  compatible = "nordic,nrf-spim";
  status = "okay";

  pinctrl-0 = <&spi3_default>;
  pinctrl-1 = <&spi3_sleep>;
  pinctrl-names = "default", "sleep";

  led_strip: ws2812@0 {
    compatible = "worldsemi,ws2812-spi";

    /* SPI */
    reg = <0>; /* ignored, but necessary for SPI bindings */
    spi-max-frequency = <4000000>;

    /* WS2812 */
    chain-length = <6; /* number of LEDs */
    spi-one-frame = <0x70>;
    spi-zero-frame = <0x40>;
    color-mapping = <LED_COLOR_ID_GREEN
                          LED_COLOR_ID_RED
                          LED_COLOR_ID_BLUE>;
  };
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        zmk,underglow = &led_strip;

        /delete-property/ zephyr,console;
        /delete-property/ zephyr,shell-uart;

        zephyr,console = &cdc_acm_uart;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <13>;
        rows = <5>;

        map = <
            RC(3,0) RC(0,3) RC(3,1) RC(1,3) RC(3,2) RC(2,3)      RC(3,6) RC(0,9) RC(3,7) RC(1,9) RC(3,8) RC(2,9)
            RC(4,0) RC(0,4) RC(4,1) RC(1,4) RC(4,2) RC(2,4)      RC(4,6) RC(0,10) RC(4,7) RC(1,10) RC(4,8) RC(2,10)
            RC(5,0) RC(0,5) RC(5,1) RC(1,5) RC(5,2) RC(2,5)      RC(5,6) RC(0,11) RC(5,7) RC(1,11) RC(5,8) RC(2,11)
                            RC(6,1) RC(1,6) RC(6,2) RC(2,6)      RC(6,7) RC(1,12) RC(6,8) RC(2,12)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-charlieplex";

        gpios
        = <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        ;
    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
        label = "encoder_left";
    };
    
    right_encoder: encoder_right {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
        label = "encoder_right";
    };
};