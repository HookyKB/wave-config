#include <dt-bindings/zmk/matrix_transform.h>
&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
    };
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;

        /delete-property/ zephyr,console;
        /delete-property/ zephyr,shell-uart;

        zephyr,console = &cdc_acm_uart;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <6>;

        map = <
            RC(0,4) RC(4,0) RC(0,5) RC(5,0) RC(0,6) RC(6,0)      RC(7,0) RC(0,7) RC(0,8) RC(8,0) RC(9,0) RC(0,9)
            RC(1,4) RC(4,1) RC(1,5) RC(5,1) RC(1,6) RC(6,1)      RC(7,1) RC(1,7) RC(1,8) RC(8,1) RC(9,1) RC(1,9)
            RC(2,4) RC(4,2) RC(2,5) RC(5,2) RC(2,6) RC(6,2)      RC(7,2) RC(2,7) RC(2,8) RC(8,2) RC(9,2) RC(2,9)
                            RC(3,5) RC(5,3) RC(3,6) RC(6,3)      RC(7,3) RC(3,7) RC(3,8) RC(8,3)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-charlieplex";

        gpios
        = <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        ;
    };
};